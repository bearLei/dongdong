<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        style="@style/MemoTitleTextStyle"
        android:text="查找您感兴趣的群组" />

    <View style="@style/LineStyle" />

    <LinearLayout
        android:id="@+id/group_search_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="@dimen/photo_listitem_tiny_size"
            android:layout_height="@dimen/photo_listitem_tiny_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/group_search" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:text="搜索群组"
            android:textColor="@color/text_black_color"
            android:textSize="16sp" />

             <TextView
    		android:id="@+id/member_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    
            android:textColor="@color/red_color"
            android:textStyle="bold"
            android:textSize="16sp" />
        
        
        <ImageView style="@style/ArrowRightStyle" />
    </LinearLayout>

    <View style="@style/LineStyle" />

    <TextView
        style="@style/MemoTitleTextStyle"
        android:text="邀请我的好友一起群聊吧" />

    <View style="@style/LineStyle" />

    <LinearLayout
          android:id="@+id/group_new_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="@dimen/photo_listitem_tiny_size"
            android:layout_height="@dimen/photo_listitem_tiny_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/group_new" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:text="新建群组"
            android:textColor="@color/text_black_color"
            android:textSize="16sp" />

        <ImageView style="@style/ArrowRightStyle" />
    </LinearLayout>

    <View style="@style/LineStyle" />

    <TextView
        style="@style/MemoTitleTextStyle"
        android:text="我的群组" />

    <View style="@style/LineStyle" />

</LinearLayout>