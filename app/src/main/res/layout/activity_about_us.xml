<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    
    <RelativeLayout style="@style/titleBackGroundStyle" >

        <ImageView style="@style/titleBackStyle" />

        <TextView
            style="@style/titleTextStyle"
            android:text="关于我们" />
    </RelativeLayout>

    <View style="@style/LineStyle"/>
    
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/welcome_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/app_name"
        android:textColor="@color/text_black_color"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/app_name"
        android:textColor="#6A819E"
        android:textSize="15sp" />
 
   
    <View 
       style="@style/VerticalWeightViewStyle"/>
        
      <TextView
        android:id="@+id/email_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="联系邮箱：1920324611@qq.com"
    
        android:textColor="#6A819E"
        android:textSize="15sp" />
      
      <TextView
        android:id="@+id/web_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="QQ：1920324611"
    android:layout_marginBottom="40dp"
        android:textColor="#6A819E"
        android:textSize="15sp" />
      
      
      
</LinearLayout>