<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/photo_listitem_tiny_size"
            android:layout_height="@dimen/photo_listitem_tiny_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:src="@drawable/group_avator_default" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:textColor="@color/text_black_color"
            android:textSize="16sp" />

             <TextView
    		android:id="@+id/member_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    
            android:textColor="@color/red_color"
            android:textStyle="bold"
            android:textSize="16sp" />
        
        
        <ImageView style="@style/ArrowRightStyle" />
    </LinearLayout>