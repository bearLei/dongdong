<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >
    
    <RelativeLayout style="@style/titleBackGroundStyle" >

        <ImageView style="@style/titleBackStyle" />

        <TextView
            style="@style/titleTextStyle"
            android:text="@string/location_message" />

        <TextView
                android:id="@+id/btn_location_send"
            style="@style/TitleRightBtnNoBackgroundStyle"
            android:text="@string/button_send" />
    </RelativeLayout>
   
    <View style="@style/LineStyle"/>
    
    <com.baidu.mapapi.map.MapView android:id="@+id/bmapView"
	    android:layout_width="fill_parent" android:layout_height="fill_parent" 
	    android:clickable="true"
	    android:background="#fff"
	/>
    
</LinearLayout>