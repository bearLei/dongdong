    </RelativeLayout>
    
       <View style="@style/LineStyle"/>
    

    <GridView
        android:id="@+id/gridView"
        android:padding="10dp"
        android:layout_marginTop="10dp"
      style="@style/GridViewStyle">

   
    </GridView>

</LinearLayout>